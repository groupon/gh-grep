{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": null,
    "outDir": "lib"
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "extends": "@tsconfig/node14"
}
